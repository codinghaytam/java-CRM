<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="479.0" prefWidth="865.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.ShowLeadsController">
    <!-- Title Label -->
    <Label layoutX="375.0" layoutY="6.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Lead List" />
    <!-- TableView for displaying agent details -->
    <TableView fx:id="leadTable" layoutX="10.0" layoutY="50.0" prefHeight="426.0" prefWidth="850.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="headquartersColumn" prefWidth="150.0" text="Headquarters" />
            <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Phone" />
			<TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
            <!-- Add the Delete column (without the cellFactory logic) -->
            <TableColumn fx:id="deleteColumn" prefWidth="80.0" text="Action" />
        </columns>
        <!-- Set table column resizing policy to make it more responsive -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
	<Label fx:id="messageLabel" layoutX="624.0" layoutY="15.0" />
</AnchorPane>