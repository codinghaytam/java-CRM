<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="406.0" prefWidth="673.0" spacing="20" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.AgentPageController">
   <BorderPane prefHeight="411.0" prefWidth="673.0">
      <left>
         <VBox alignment="TOP_CENTER" prefHeight="371.0" prefWidth="153.0" BorderPane.alignment="CENTER">
            <children>
               <Button fx:id="createLeadBtn1" onAction="#createLead" prefHeight="25.0" prefWidth="150.0" text="Add Lead">
                  <effect>
                     <Blend />
                  </effect>
                  <VBox.margin>
                     <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
               </Button>
                <Button fx:id="createLeadBtn" onAction="#createClient" prefWidth="150" text="Add Client">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </Button>
                <Button fx:id="showLeadsBtn" onAction="#showLeads" prefWidth="150" text="Show/Delete Leads">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="149.0" text="Show/Delete Clients">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </Button>
            </children>
         </VBox>
      </left>
      <top>
          <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Agent Home Page" BorderPane.alignment="CENTER" />
      </top>
      <center>
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
               <Label text="Table de client">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
               <TableView prefHeight="313.0" prefWidth="500.0" fx:id="clientTableView">
                 <columns>
                   <TableColumn fx:id="clientid" id="id" prefWidth="112.0" text="id" />
                   <TableColumn fx:id="name" prefWidth="77.0" text="name" />
                     <TableColumn fx:id="adresse" prefWidth="92.0" text="adresse" />
                     <TableColumn fx:id="telephone" prefWidth="120.0" text="telephone" />
                     <TableColumn fx:id="email" prefWidth="118.0" text="email" />
                 </columns>
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
               </TableView>
            </children>
         </VBox>
      </center>
   </BorderPane>
</VBox>
