<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="406.0" prefWidth="673.0" spacing="20" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.AgentPageController" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
    <BorderPane prefHeight="411.0" prefWidth="673.0" style="-fx-background-color: #ffffff; -fx-border-color: #c3c3c3; -fx-border-width: 1px;">
        <left>
            <VBox alignment="TOP_CENTER" prefHeight="371.0" prefWidth="153.0" BorderPane.alignment="CENTER" spacing="10">
                <children>
                    <Button fx:id="createLeadBtn1" onAction="#createLead" prefHeight="25.0" prefWidth="150.0" text="Add Lead" style="-fx-background-color: #2a9df4; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5px;">
                        <effect>
                            <Blend />
                        </effect>
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="createLeadBtn" onAction="#createClient" prefWidth="150" text="Add Client" style="-fx-background-color: #2a9df4; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5px;">
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="showLeadsBtn" onAction="#showLeads" prefWidth="150" text="Show/Delete Leads" style="-fx-background-color: #2a9df4; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5px;">
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="149.0" text="Show/Delete Clients" style="-fx-background-color: #2a9df4; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5px;">
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </Button>
                </children>
            </VBox>
        </left>
        <top>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a9df4;" text="Agent Home Page" BorderPane.alignment="CENTER" />
        </top>
        <center>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" spacing="10">
                <children>
                    <Label text="Table de client" style="-fx-font-size: 24px; -fx-font-family: Arial; -fx-text-fill: #333333;" />
                    <TableView prefHeight="313.0" prefWidth="500.0" fx:id="clientTableView" style="-fx-background-color: #ffffff; -fx-border-color: #c3c3c3; -fx-border-radius: 5px; -fx-padding: 10;">
                        <columns>
                            <TableColumn fx:id="clientid" id="id" prefWidth="112.0" text="id" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
                            <TableColumn fx:id="name" prefWidth="77.0" text="name" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
                            <TableColumn fx:id="adresse" prefWidth="92.0" text="adresse" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
                            <TableColumn fx:id="telephone" prefWidth="120.0" text="telephone" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
                            <TableColumn fx:id="email" prefWidth="118.0" text="email" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
                        </columns>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </TableView>
                </children>
            </VBox>
        </center>
    </BorderPane>
</VBox>

