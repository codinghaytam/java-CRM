<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="260.0" prefWidth="286.0" spacing="20" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.AddLeadController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Add Lead" />
    <TextField fx:id="companyNameField" promptText="Company Name" />
    <TextField fx:id="headquartersField" promptText="Headquarters" />
    <TextField fx:id="phoneField" promptText="Phone" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button onAction="#handleAddLead" text="Submit" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
