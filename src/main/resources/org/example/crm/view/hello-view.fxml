<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="887.0" spacing="40.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.MainController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Welcome Text -->
    <Label fx:id="welcomeText"
           text="Welcome to the CRM System!"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;
                  -fx-padding: 15px; -fx-background-color: #ecf0f1;
                  -fx-border-radius: 8px; -fx-background-radius: 8px;" />

    <!-- Login Buttons -->
    <VBox alignment="CENTER" spacing="20">
        <Button fx:id="adminLoginButton"
                text="Admin Login"
                onAction="#handleAdminLogin"
                style="-fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-color: #e74c3c; -fx-text-fill: white;
                       -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

        <Button fx:id="agentLoginButton"
                text="Agent Login"
                onAction="#handleAgentLogin"
                style="-fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-color: #3498db; -fx-text-fill: white;
                       -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
    </VBox>
</VBox>
