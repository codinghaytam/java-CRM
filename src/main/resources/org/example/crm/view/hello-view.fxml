<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="887.0" spacing="40.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.MainController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Welcome Text -->
    <Label fx:id="welcomeText" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #3498db; -fx-effect: dropshadow(gaussian, #2980b9, 10, 0.5, 0, 4); -fx-background-color: #ecf0f1; -fx-padding: 20px; -fx-border-radius: 10px;" text="Welcome to the Supercharged CRM System!" />

    <!-- Login Buttons -->
    <VBox alignment="CENTER" spacing="20">
        <Button fx:id="adminLoginButton" onAction="#handleAdminLogin" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 25px; -fx-effect: dropshadow(gaussian, #c0392b, 10, 0.5, 0, 4);" text="Admin Login" />

        <Button fx:id="agentLoginButton" onAction="#handleAgentLogin" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 25px; -fx-effect: dropshadow(gaussian, #2980b9, 10, 0.5, 0, 4);" text="Agent Login" />
    </VBox>

</VBox>
