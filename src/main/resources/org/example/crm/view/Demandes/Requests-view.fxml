<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="736.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.RequestsController">

    <!-- Title Section -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Pending Requests" />

        <!-- Table to display the pending requests -->
        <TableView fx:id="requestsTable">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="100" text="Request ID" />
                <TableColumn fx:id="columnLeadId" prefWidth="100" text="Lead ID" />
                <TableColumn fx:id="columnAgentId" prefWidth="100" text="Agent ID" />
                <TableColumn fx:id="columnLoyaltyCardId" prefWidth="150" text="Loyalty Card ID" />
                <TableColumn fx:id="columnStatus" prefWidth="100" text="Status" />
                <TableColumn fx:id="columnCreationDate" prefWidth="97.0" text="Creation Date" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

    </VBox>
</AnchorPane>
