<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="300.0" prefHeight="200.0" style="-fx-background-color: #87CEEB;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.crm.controllers.">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>

    <Label text="Agent Login" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <TextField fx:id="usernameField" promptText="Enter your CNE" style="-fx-background-color: white;" />
    <TextField fx:id="passwordField" promptText="Enter your Password" style="-fx-background-color: white;" />

    <Button text="Login" fx:id="loginButton" style="-fx-background-color: #1E90FF; -fx-text-fill: white;" />
</VBox>
