<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crm.controllers.LoginController">
    <children>
        <!-- Centered layout using VBox -->
        <VBox alignment="CENTER" spacing="20" layoutX="50.0" layoutY="40.0" prefWidth="300.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">

            <!-- Title Label -->
            <Label text="Admin Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Username Label and TextField -->
            <VBox spacing="5">
                <Label text="Username" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                <TextField fx:id="usernameField" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5px;" />
            </VBox>

            <!-- Password Label and PasswordField -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                <PasswordField fx:id="passwordField" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5px;" />
            </VBox>

            <!-- Login Button -->
            <Button fx:id="btn" text="Login" onAction="#handleLogin" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10; -fx-border-radius: 5px;" prefWidth="250" />

            <!-- Error or Success Message -->
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
        </VBox>
    </children>
</AnchorPane>
